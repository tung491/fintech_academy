{
  "name": "finacademy-backend",
  "version": "1.0.0",
  "description": "Backend API for FinAcademy",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:sqlite": "DATABASE_TYPE=sqlite tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:sqlite": "DATABASE_TYPE=sqlite tsx src/db/sqlite-migrate.ts",
    "seed": "tsx src/db/seed.ts",
    "seed:sqlite": "DATABASE_TYPE=sqlite tsx src/db/seed.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.5",
    "better-sqlite3": "^9.4.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/better-sqlite3": "^7.6.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "typescript": "^5.4.5",
    "tsx": "^4.7.3"
  }
}